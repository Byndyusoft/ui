{
  "name": "root",
  "private": true,
  "workspaces": [
    "components/*",
    "hooks/*",
    "services/*"
  ],
  "version": "0.1.0",
  "description": "Byndyusoft React UI Library",
  "main": "lib/index.js",
  "scripts": {
    "build": "rollup -c",
    "build:storybook": "build-storybook",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:scripts": "eslint src",
    "lint:styles": "stylelint src/**/*.css",
    "prettier:check": "prettier --check \"src/**/*.{ts, tsx, css}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts, tsx, css}\"",
    "start": "start-storybook -p 6006",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byndyusoft/ui.git"
  },
  "keywords": [
    "byndyusoft",
    "react",
    "components",
    "hooks"
  ],
  "author": "Byndyusoft Frontend Stream <frontend@byndyusoft.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Byndyusoft/ui/issues"
  },
  "homepage": "https://github.com/Byndyusoft/ui#readme",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@byndyusoft/eslint-config": "^2.0.0",
    "@byndyusoft/stylelint-config": "^0.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^29.0.0",
    "@types/react": "^17.0.21",
    "babel-loader": "^8.2.2",
    "classnames": "^2.3.1",
    "eslint": "^8.23.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.2",
    "lerna": "^5.5.0",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "stylelint": "^14.11.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "classnames": ">=2.3",
    "react": ">=17",
    "typescript": ">=4.4"
  }
}
